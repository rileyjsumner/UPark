<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPark">

    <EditText
        android:id="@+id/parkSearch"
        android:layout_width="275dp"
        android:layout_height="51dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:hint="Search for parks"

        android:iconifiedByDefault="false"
        app:layout_constraintEnd_toStartOf="@+id/searchButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchButton"
        android:text="Go"
        android:layout_width="60dp"
        android:layout_height="51dp"
        android:layout_marginEnd="20dp"
        android:onClick="buttonPressed"
        app:layout_constraintBottom_toBottomOf="@+id/parkSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/parkSearch" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parkSearch"
        app:layout_constraintVertical_bias="0.139">


    </ListView>



</androidx.constraintlayout.widget.ConstraintLayout>